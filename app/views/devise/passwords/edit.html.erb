<div class="ibox">
  <h1><%= t ".header" %></h1>
</div>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="row">
    <div class="col col-xs-12 col-sm-4">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", label: t(".password"), data: {toggle: "tooltip-helper", placement: "right", title: t("formhelper.user.password") } %>
    </div>
  </div>
  <div class="row ibox">
    <div class="col col-xs-12 col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", label: t(".password_confirmation") %>
    </div>
  </div>

  <%= f.submit t(".submit"), class: "btn btn-primary" %>
<% end %>
